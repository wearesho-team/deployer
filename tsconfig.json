{
  "compilerOptions": {
    "outDir": "./build",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "removeComments": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "strictNullChecks": true
  },
  "exclude": [
    "./node_modules/**/*",
    "./tests/*"
  ]
}